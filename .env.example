# Токен Telegram бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# API ключ Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Режим работы - production для webhook
NODE_ENV=production

# Переменная для работы бота на Render
RENDER=true

# Идентификаторы администраторов (через запятую, без пробелов)
ADMIN_IDS=123456789

# Настройки ЮКассы (Яндекс.Касса)
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here
YOOKASSA_TEST_MODE=true
YOOKASSA_RETURN_URL=https://your-app-url.onrender.com/payment/success
YOOKASSA_DEFAULT_METHOD=sberbank  # 'sberbank' для SberPay или оставьте пустым для универсальной формы